{
  "name": "strip-all-bom",
  "version": "2.0.1",
  "description": "Strip all UTF-8 byte order marks (BOM) from a string",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onasman/strip-all-bom.git"
  },
  "keywords": [
    "strip",
    "bom",
    "byte",
    "order",
    "mark",
    "unicode",
    "utf8",
    "utf-8",
    "remove",
    "zwnbsp",
    "ufeff",
    "trim",
    "all",
    "text",
    "string"
  ],
  "author": {
    "name": "Oskar NÃ¤sman",
    "email": "oskar.nasman@hotmail.com"
  },
  "bugs": {
    "url": "https://github.com/onasman/strip-all-bom/issues"
  },
  "homepage": "https://github.com/onasman/strip-all-bom#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3"
  },
  "files": [
    "lib/**/*"
